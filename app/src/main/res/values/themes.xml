<resources>
    <!-- Base application theme. -->
    <style name="Theme.OnlineLibraryApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Green_Mint</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor">@color/Green_Mint</item>-->
        <!-- Customize your theme here. -->
        <!-- This Code to make the status bar color transparent in all application-->
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="fontFamily">@font/din_next_arabic_regular</item>
    </style>

    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="prefix">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/din_next_arabic_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#D3D2D2</item>
        <item name="android:colorForeground">#99BABABA</item>
    </style>

    <style name="notificationsModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#D3D2D2</item>
        <item name="android:colorForeground">#99BABABA</item>
    </style>

    <style name="privateModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#D3D2D2</item>
        <item name="android:colorForeground">#99BABABA</item>
    </style>

    <style name="securityModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/security</item>
        <item name="colorSwitchThumbNormal">#D3D2D2</item>
        <item name="android:colorForeground">#99BABABA</item>
    </style>

</resources>
